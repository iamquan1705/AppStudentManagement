<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".StartActivity">
<TextView
    android:layout_width="wrap_content"
    android:text="Quản lý sinh viên "
    android:layout_marginTop="30dp"
    android:textSize="30dp"
    android:layout_gravity="center"
    android:textColor="@color/white"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="Khoa Công nghệ thông tin"
        android:layout_marginBottom="130dp"
       android:layout_gravity="center"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:orientation="vertical"
        >
    <ImageView
        android:id="@+id/btnStartLop"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/score"
        android:background="@drawable/vien" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quản lý lớp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textStyle="bold"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="60dp"
        >
    <ImageView
        android:id="@+id/btnStartSinhVien"
        android:layout_width="100dp"
        android:src="@drawable/students"
        android:layout_gravity="center"
        android:background="@drawable/vien"
        android:layout_height="100dp"
       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quản lý sinh viên"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:textStyle="bold"
        />
    </LinearLayout>
</LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Design by LocDybala"
        android:layout_gravity="center"
        android:layout_marginTop="280dp"
        />
</LinearLayout>