<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background1"
    tools:context=".AddLopActivity">

<LinearLayout
    android:layout_width="400dp"
    android:orientation="vertical"
    android:background="@drawable/vien3"
    android:layout_height="350dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Sửa Lớp"
        android:textSize="25dp"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Mã lớp">
            <EditText
                android:id="@+id/edtMaLop"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_height="wrap_content"
                android:background="@drawable/vien1"
                />
        </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Tên lớp">
        <EditText
            android:id="@+id/edtTenLop"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:background="@drawable/vien1"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:hint="Giáo viên">
        <EditText
            android:id="@+id/edtGiaoVien"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:background="@drawable/vien1"
            />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <android.widget.Button
            android:id="@+id/btnSuaLop"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:text="Thêm"
            android:textColor="#ffffff"
            />
        <android.widget.Button
            android:id="@+id/btnThoatSuaLop"
            android:layout_marginLeft="20dp"
            android:text="Thoát"
            android:background="@drawable/background_button"
            android:layout_width="150dp"
            android:textColor="#ffffff"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</LinearLayout>
</LinearLayout>