<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/background1"
    android:layout_height="match_parent"

    tools:context=".ThongtinActivity">
    <LinearLayout
        android:layout_width="400dp"
        android:orientation="vertical"
        android:background="@drawable/vien3"
        android:layout_height="600dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin sinh viên"
        android:textAllCaps="true"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgAnhTheInfo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/avatar" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content">
            <android.widget.Button
                android:id="@+id/btnCameraSua"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/background_button"
                android:text="Camera"
                android:visibility="gone"
                android:textColor="#ffffff" />

            <android.widget.Button
                android:id="@+id/btnLibrarySua"
                android:layout_width="70dp"
                android:layout_height="30dp"
                android:background="@drawable/background_button"
                android:text="Thư viện"
                android:visibility="gone"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
    <android.widget.Button
        android:id="@+id/btnSuaInFo"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="end"
        android:background="@drawable/ic_baseline_edit"
        android:textStyle="bold"
        android:layout_marginRight="20dp"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên">

        <EditText
            android:id="@+id/edtMaSVInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/black"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien1" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên">

        <EditText
            android:id="@+id/edtTenSVInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien1" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên">

        <EditText
            android:id="@+id/edtNamSinhInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien1" />
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã sinh viên">

        <EditText
            android:id="@+id/edtDiaChiInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:enabled="false"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"
            android:background="@drawable/vien1" />
    </com.google.android.material.textfield.TextInputLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lớp : "
            android:textSize="30dp"
            />
        <Spinner
            android:id="@+id/spnTenLopSua"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:background="@drawable/vien1"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">

        <android.widget.Button
            android:id="@+id/btnSuaSinhVien"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/background_button"
            android:text="Sửa"
            android:visibility="gone"
            android:textColor="#ffffff" />

        <android.widget.Button
            android:id="@+id/btnThoatInfoSv"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/background_button"
            android:text="Thoát"
            android:textColor="#ffffff" />
    </LinearLayout>
    </LinearLayout>
</LinearLayout>